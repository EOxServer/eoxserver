<!DOCTYPE catalog PUBLIC "-//OASIS//DTD Entity Resolution XML Catalog V1.0//EN" "http://www.oasis-open.org/committees/entity/release/1.0/catalog.dtd">
<catalog xmlns="urn:oasis:names:tc:entity:xmlns:xml:catalog">
<!-- wcseo 1.0 -->
  <rewriteSystem systemIdStartString="http://schemas.opengis.net/wcseo/1.0/" rewritePrefix="wcseo/1.0/"/>
  <rewriteURI uriStartString="http://schemas.opengis.net/wcseo/1.0/" rewritePrefix="wcseo/1.0/"/>
<!-- eop 2.0 -->
  <rewriteSystem systemIdStartString="http://schemas.opengis.net/eop/2.0/" rewritePrefix="omeo/"/>
  <rewriteURI uriStartString="http://schemas.opengis.net/eop/2.0/" rewritePrefix="omeo/"/>
<!-- wcs/2.0 -->
  <rewriteSystem systemIdStartString="http://schemas.opengis.net/wcs/2.0/" rewritePrefix="wcs/2.0/"/>
  <rewriteURI uriStartString="http://schemas.opengis.net/wcs/2.0/" rewritePrefix="wcs/2.0/"/>
<!-- wcs/geotiff -->
  <rewriteSystem systemIdStartString="http://schemas.opengis.net/wcs/geotiff/" rewritePrefix="wcs/geotiff/"/>
  <rewriteURI uriStartString="http://schemas.opengis.net/wcs/geotiff/" rewritePrefix="wcs/geotiff/"/>
<!-- wcs/crs -->
  <rewriteSystem systemIdStartString="http://schemas.opengis.net/wcs/crs/" rewritePrefix="wcs/crs/"/>
  <rewriteURI uriStartString="http://schemas.opengis.net/wcs/crs/" rewritePrefix="wcs/crs/"/>
<!-- wcs/range-subsetting -->
  <rewriteSystem systemIdStartString="http://schemas.opengis.net/wcs/range-subsetting/" rewritePrefix="wcs/range-subsetting/"/>
  <rewriteURI uriStartString="http://schemas.opengis.net/wcs/range-subsetting/" rewritePrefix="wcs/range-subsetting/"/>
<!-- gml 3.2.1 -->
  <rewriteSystem systemIdStartString="http://schemas.opengis.net/gml/3.2.1/" rewritePrefix="gml/3.2.1/"/>
  <rewriteURI uriStartString="http://schemas.opengis.net/gml/3.2.1/" rewritePrefix="gml/3.2.1/"/>
<!-- schemas.opengis.net -->
  <rewriteSystem systemIdStartString="http://schemas.opengis.net/" rewritePrefix="SCHEMAS_OPENGIS_NET/"/>
  <rewriteURI uriStartString="http://schemas.opengis.net/" rewritePrefix="SCHEMAS_OPENGIS_NET/"/>
<!-- mapserver -->
  <rewriteSystem systemIdStartString="http://localhost:8000/ows?service=WMS&amp;version=1.3.0&amp;request=" rewritePrefix="mapserver/"/>
  <rewriteURI uriStartString="http://localhost:8000/ows?service=WMS&amp;version=1.3.0&amp;request=" rewritePrefix="mapserver/"/>
<!-- www.w3.org -->
  <rewriteSystem systemIdStartString="http://www.w3.org/" rewritePrefix="WWW_W3_ORG/"/>
  <rewriteURI uriStartString="http://www.w3.org/" rewritePrefix="WWW_W3_ORG/"/>
</catalog>
